#version 430

out vec4 color_out;

layout(location=3) uniform vec3 color;
layout(location=4) uniform vec3 lightPosition;

in vec3 shadingNormal;
in vec3 finalPosition;

void main()
{
        color_out = vec4(color, 1)* dot( shadingNormal, lightPosition - finalPosition ) / (shadingNormal.length() * (lightPosition - finalPosition).length());
        //color_out = abs(shadingNormal);

}
