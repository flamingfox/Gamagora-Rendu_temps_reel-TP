#version 430

layout(location=1) uniform mat4 transform;

layout(location=23) uniform mat4 cameraTransform;

layout(location=12) in vec4 position;
layout(location=13) in vec4 normal;

out vec4 shadingNormal;

void main()
{
        gl_Position = cameraTransform * transform * position;

        shadingNormal = normal;
}
