#version 430

layout(location=22) uniform mat4 cameraLightTransform;
layout(location=23) uniform mat4 cameraTransform;

layout(location=12) in vec4 position;
layout(location=13) in vec4 normal;

out vec3 shadingNormal;
out vec3 finalPosition;

out vec4 shadowCoord;

void main()
{
        gl_Position = cameraTransform * position;

        finalPosition = vec3(gl_Position.x, gl_Position.y, gl_Position.z);
        shadingNormal = vec3(normal.x, normal.y, normal.z);

        shadowCoord = cameraLightTransform*position;
}
